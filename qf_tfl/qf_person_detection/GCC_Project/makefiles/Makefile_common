# -*- mode: Makefile -*-
# This is the common stub to be included in each make file

D_FILES:=$(addprefix $(DEPEND_PATH)$(DIR_SEP),$(SRCS:.c=.d))
D_FILES+=$(addprefix $(DEPEND_PATH)$(DIR_SEP),$(CXSRCS:.cc=.d))
O_FILES:=$(addprefix $(OUTPUT_PATH)$(DIR_SEP),$(SRCS:.c=.o))
O_FILES+=$(addprefix $(DEPEND_PATH)$(DIR_SEP),$(CXSRCS:.cc=.o))
R_FILES:=$(addprefix $(MAIN_FPGA_RTL_DIR)$(DIR_SEP),$(FPGA_RTL_SRCS))

DEPFLAGS = -MT $@ -MMD -MP -MF $(DEPEND_PATH)/$*.Td

all: $(OBJS) $(MAIN_FPGA_RTL_DIR)/$(FPGA_RTL_OBJ)

#$(info QLFS SOURCE: ${SRCS})
#$(info QLFS CXSOURCE: ${CXSRCS})
#$(info QLFS OBJS: ${OBJS})
#$(info SRC_PATH: ${SRC_PATH})
#$(info DEPEND_PATH: ${DEPEND_PATH})


%.o:%.c
$(OUTPUT_PATH)/%.o: $(SRC_PATH)/%.c $(DEPEND_PATH)/%.d
	$(CC) $< $(CFLAGS) $(DEPFLAGS) $(INCLUDE_DIRS) -o $@
	$(MV) $(DEPEND_PATH)$(DIR_SEP)$*.Td $(DEPEND_PATH)$(DIR_SEP)$*.d
	
%.o:%.cc
$(OUTPUT_PATH)/%.o: $(SRC_PATH)/%.cc $(DEPEND_PATH)/%.d
	$(CX) $< $(CXFLAGS) $(DEPFLAGS) $(INCLUDE_DIRS) -o $@
	$(MV) $(DEPEND_PATH)$(DIR_SEP)$*.Td $(DEPEND_PATH)$(DIR_SEP)$*.d
	
$(MAIN_FPGA_RTL_DIR)/$(FPGA_RTL_OBJ): $(R_FILES)
ifneq (,$(FPGA_RTL_OBJ))
	-ql_symbiflow  -compile -src $(MAIN_FPGA_RTL_DIR) -d ql-eos-s3 -t $(RTL_TOP_MODULE) -v $(FPGA_RTL_SRCS) -p quickfeather.pcf -P PU64 -dump header
endif

-include $(D_FILES))
	

$(DEPEND_PATH)/%.d: ;
.PRECIOUS: $(DEPEND_PATH)/%.d

DELETEME=$(D_FILES) $(O_FILES)
clean:
	@echo Cleaning ...
ifneq (,${DELETEME})
	-$(HIDE)$(RM) $(D_FILES)
	-$(HIDE)$(RM) $(O_FILES) 
ifneq (,$(FPGA_RTL_OBJ))
	-$(HIDE)$(RM) $(MAIN_FPGA_RTL_DIR)/$(FPGA_RTL_OBJ)
endif
	-$(HIDE)$(RMDIR) $(MAIN_FPGA_RTL_DIR)/build
endif

